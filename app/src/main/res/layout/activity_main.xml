<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:background="#6200EE"
        />
    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="30sp"
        android:layout_below="@id/appBar"
        android:src="@drawable/film_loading"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="200dp"

        />
    <EditText
        android:id="@+id/editEmail"
        android:layout_marginTop="30sp"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:inputType="text"
        android:hint="Type your Email"/>
    <EditText
        android:id="@+id/editPassword"
        android:layout_marginTop="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editEmail"
        android:inputType="textPassword"
        android:hint="Type Your Password"/>
    <Button
        android:id="@+id/btnValider"
        android:layout_marginTop="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/editPassword"/>
    <TextView
        android:id="@+id/txtTextLogin"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnValider"
        android:textStyle="bold"
        android:text="@string/or_login_with"/>
   <LinearLayout
       android:layout_marginTop="15sp"
       android:id="@+id/allLoginButton"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_below="@id/txtTextLogin"
       android:gravity="center"
       >
       <ImageView
           android:id="@+id/google"
           android:layout_width="70dp"
           android:layout_height="70dp"
           android:src="@drawable/chercher"
           android:layout_marginEnd="35dp"/>
       <ImageView
           android:id="@+id/facebook"
           android:src="@drawable/facebook"
           android:layout_width="70dp"
           android:layout_height="70dp"
           android:layout_marginEnd="35dp"/>
       <ImageView
           android:id="@+id/apple"
           android:layout_width="70dp"
           android:layout_height="70dp"
           android:src="@drawable/apple"/>
   </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_below="@id/allLoginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        >
        <TextView
            android:id="@+id/message"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/don_t_you_have_an_account"/>
        <TextView
            android:id="@+id/register"
            android:layout_toEndOf="@id/message"
            android:layout_width="0dp"
            android:layout_marginStart="5dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:textColor="#6200EE"
            android:textStyle="bold"
            android:text="@string/register"/>

    </LinearLayout>
</RelativeLayout>